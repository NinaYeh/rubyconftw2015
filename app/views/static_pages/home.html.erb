<nav id="front-nav" >
  <ul class="inner-nav">
    <li><a href="#home" class="home_ic"></a></li>
    <li><a href="#speaker" class="speaker_ic"></a></li>
    <li><a href="#coc" class="coc_ic"></a></li>
